<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NearbyPlaceLVTemplate"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="165dp"
        android:layout_height="185dp"
        android:id="@+id/placeImageData"
        android:layout_marginLeft="12dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/titleData"
            android:layout_marginBottom="3sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/starImageData"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginLeft="2dp"
                android:id="@+id/ratingTextData"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:id="@+id/commentsImageData"
                android:layout_marginLeft="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:id="@+id/commentsTextData"
                android:layout_marginLeft="3.5dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:id="@+id/priceData"
            android:layout_marginTop="3sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginTop="3sp"
            android:id="@+id/shortDescriptionData"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="3sp">

            <Button
                android:layout_width="85dp"
                android:layout_height="25dp"
                android:textSize="13sp"
                android:text="Details"
                android:id="@+id/buttonDetails"
                android:background="@drawable/rounded_button_details" />

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/bookMarkButton"
                android:layout_gravity="center_vertical"
                android:src="@drawable/bookmark"
                android:background="@drawable/rounded_button_bookmark"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>