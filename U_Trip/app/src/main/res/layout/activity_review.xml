<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Review"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:background="@drawable/borobudur_review_header"
        android:id="@+id/ReviewHeader"
        android:layout_marginBottom="100px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ReviewName"
            android:text="Candi Borobudur"
            android:layout_marginLeft="40dp"
            android:textSize="24sp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:id="@+id/ReviewSave"
            android:background="@drawable/bookmarked"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:text="5"
            android:id="@+id/ReviewRatingNumber"/>

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_gravity="center_vertical"
            android:background="@drawable/star"
            android:id="@+id/ReviewRatingStar"
            android:layout_marginRight="40dp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/ReviewDescription"
        android:justificationMode="inter_word"
        android:text="Wisatawan yang berkunjung ke Borobudur dapat menikmati pemandangan alam sekitar yang indah, terutama saat matahari terbit dan terbenam, memberikan pengalaman spiritual yang mendalam. Selain menjadi destinasi ziarah bagi umat Buddha, Candi Borobudur juga menjadi daya tarik wisata sejarah dan budaya yang populer, mengundang pengunjung dari berbagai belahan dunia."/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ReviewTagTitle"
        android:text="Tags"
        android:layout_marginLeft="40dp"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="250px"
            android:layout_height="80px"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:text="Wonders"
            android:textColor="#000000"
            android:background="@drawable/border_button"
            android:textSize="10sp"
            android:id="@+id/ReviewTag1"/>

        <Button
            android:layout_width="400px"
            android:layout_height="80px"
            android:layout_marginRight="10dp"
            android:text="Famous Places"
            android:textColor="#000000"
            android:backgroundTint="#FFFFFF"
            android:background="@drawable/border_button"
            android:textSize="10sp"
            android:id="@+id/ReviewTag2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="270px"
            android:layout_height="90px"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="Review"
            android:textColor="#000000"
            android:backgroundTint="#FC712B"
            android:textSize="10sp"
            android:id="@+id/ReviewButton"/>

        <Button
            android:layout_width="270px"
            android:layout_height="90px"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="Discussion"
            android:textColor="#000000"
            android:backgroundTint="#FECD5A"
            android:textSize="10sp"
            android:id="@+id/DiscussionButton"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginLeft="40dp"
            android:id="@+id/ReviewProfile"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test"
                android:id="@+id/ReviewUsername"/>

            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:id="@+id/ReviewRatingUser"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ReviewMapTitle"
        android:text="Map"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:textSize="20sp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/borobudur_map"
        android:id="@+id/ReviewMap"
        android:layout_marginBottom="100px"/>

</LinearLayout>